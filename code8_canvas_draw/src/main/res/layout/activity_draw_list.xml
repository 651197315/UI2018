<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/textview_title"
                android:text="画圆" />

            <TextView
                style="@style/textview_button"
                android:onClick="onCircle"
                android:text="1、circle（圆）" />

            <TextView
                style="@style/textview_title"
                android:text="画椭圆" />

            <TextView
                style="@style/textview_button"
                android:onClick="onOval"
                android:text="2、oval（椭圆）" />

            <TextView
                style="@style/textview_title"
                android:text="画线" />

            <TextView
                style="@style/textview_button"
                android:onClick="onLine"
                android:text="3、drawLine（一根线）" />

            <TextView
                style="@style/textview_button"
                android:onClick="onLines"
                android:text="3、drawLines（多根线）" />

            <TextView
                style="@style/textview_button"
                android:onClick="onLinesOffset"
                android:text="3、drawLinesOffset（多根线，带偏移）" />

            <TextView
                style="@style/textview_title"
                android:text="画弧" />

            <TextView
                style="@style/textview_button"
                android:onClick="onArc"
                android:text="4、arc（弧）" />

            <TextView
                style="@style/textview_title"
                android:text="画点" />

            <TextView
                style="@style/textview_button"
                android:onClick="onPoint"
                android:text="5、point(点)" />

            <TextView
                style="@style/textview_button"
                android:onClick="onPoints"
                android:text="5、points(多个点)" />

            <TextView
                style="@style/textview_button"
                android:onClick="onPointsOffset"
                android:text="5、points(多个点，带偏移)" />

            <TextView
                style="@style/textview_title"
                android:text="画矩形和圆角矩形" />

            <TextView
                style="@style/textview_button"
                android:onClick="onRect"
                android:text="6、rect(矩形)" />

            <TextView
                style="@style/textview_title"
                android:text="给画布点颜色" />

            <TextView
                style="@style/textview_button"
                android:onClick="onColorXfermode"
                android:text="7、color" />

            <TextView
                style="@style/textview_title"
                android:text="画路径" />

            <TextView
                style="@style/textview_button"
                android:onClick="onPath"
                android:text="8、path" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>